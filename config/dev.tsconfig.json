{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "system",
    "outDir": "../build/js",
    "sourceMap": true,
    "sourceRoot": "/src",
    "moduleResolution": "node"
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../src/**/*.spec.ts"
  ]
}